---
import Hobbies from "../components/About/Hobbies.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const allHobbies = await getCollection('hobbies');
---

<Layout title="About">
  <!--! ------------Titulo ABOUT -------------- -->
  <div class="flex justify-center">
      <h1 class=" text-7xl lg:text-9xl ">Bienvenido</h1>
  </div>
  <!-- ------------Titulo ABOUT -------------- FIN -->
  <!--! ------------Info  -------------- -->
  <div class="w-full grid lg:grid-cols-2 grid-cols-1">
    <div class="border-2 rounded-3xl w-auto shadow-2xl h-auto lg:m-20 m-5">
      <div class="m-10">
        <h2 class="lg:text-5xl text-3xl mb-10">Hola <br /> Soy Byron</h2>
        <p>Estudiante de Ingeniería en Computación</p>
        <p class="text-gray-500">Universidad Central del Ecuador</p>
        <p class="mt-6">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Porro
          assumenda doloribus labore vero maxime cupiditate eligendi. Doloribus
          totam nemo, ad dolorum nulla commodi aliquam rerum ipsa quod quasi!
          Voluptatibus, pariatur!
        </p>
      </div>
    </div>
    <div class="h-96 lg:h-full lg:p-20">
      <div class="bg-footer bg-contain bg-no-repeat bg-center h-full relative">
          <div class="overlay"></div>
      </div>
  </div>
  
  </div>
  <!-- ------------Info  -------------- FIN -->
  <!--! ------------Mansory  -------------- -->
  <div class="mansory__container grid lg:grid-cols-3fr-5fr lg:mx-10 m-5">
    <h2 class="text-5xl m-10 self-center text-center lg:text-left">
      Las tecnologías que uso
    </h2>
    <div class="mansory grid lg:grid-cols-5 gap-2">
      <div
        class="bg-red-400 lg:col-span-1 py-4 rounded-lg grid place-items-center">
        <p class="text-6xl">Html</p>
      </div>
      <div
        class="bg-green-400 lg:col-span-3 p-4 rounded-lg grid place-items-center">
        <p class="text-6xl">Tailwind</p>
      </div>
      <div
        class="bg-gray-400 lg:col-start-5 lg:col-end-6 lg:row-start-1 lg:row-end-5 rounded-lg p-4 grid place-items-center">
        <p class="text-6xl">Css</p>
      </div>
      <div
        class="bg-blue-400 lg:col-span-4 p-4 rounded-lg grid place-items-center">
        <p class="text-6xl">Javascript</p>
      </div>
      <div
        class="bg-yellow-400 lg:row-start-4 lg:col-span-2 p-4 rounded-lg grid place-items-center">
        <p class="text-6xl">React</p>
      </div>
      <div
        class="bg-orange-400 lg:row-start-4 lg:col-span-2 p-4 rounded-lg grid place-items-center">
        <p class="text-6xl">Astro</p>
      </div>
    </div>
  </div>
  <!-- ------------Mansory  -------------- FIN -->
  <!--! -------------Hobbies----------------- -->
  <!-- <Hobbies /> -->
  <div class="container shadow-2xl w-5/6 mx-auto my-20 rounded-2xl overflow-hidden">
    <div class=" flex lg:flex-row flex-col">
      {
        allHobbies.map((hobby, index) => (
          <div  class={`color bg-hc${index + 1} flex place-items-center text-white font-bold 
          h-80 flex-1 hover:flex-3 duration-100`}>
            <h3 class="mx-auto text-center">{hobby.data.title} </h3>
            <div class="info__hobbies left-0 top-0 right-0 bottom-0 m-14 z-10 absolute opacity-0">
              <h4 class="text-3xl text-black text-center my-5">{hobby.data.title} </h4>
              <ul>
                {hobby.data.hobbies.map((singleHobby) => (
                  <li>{singleHobby}</li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
    <div id="stats" class="h-auto w-full bg-white flex items-center justify-between px-3">
      <span class="text-3xl m-2 text-gray-400">Hobbies</span>
      <svg class="fill-gray-400" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 18 18">
        <path d="M4 7.5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5S5.5 9.83 5.5 9 4.83 7.5 4 7.5zm10 0c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5-.67-1.5-1.5-1.5zm-5 0c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5S9.83 7.5 9 7.5z"></path>
      </svg>
    </div>
  </div>
  <!--! -------------Hobbies-----------------FIN -->
</Layout>

