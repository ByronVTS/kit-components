---
import Layout from "../../layouts/Layout.astro";
const allPosts = await Astro.glob("../posts/*.md");
// recorremos todos los archivos de ese tipo
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout title="Indice de etiquetas">
  <h2 class="text-3xl text-center mt-5">Lista de Tags</h2>
  <div class="tags__container max-w-screen-xl mx-auto">
    {
      tags.map((tag) => (
        <p class="tag shadow-xl">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Layout>

<style>
  .tag a {
    color: rgb(36, 19, 58);
    transition: 400ms ease-in-out;
  }

  

  .tag {
    display: flex;
    flex-wrap: wrap;
    width: 300px;
    margin: 0.25em;
    border: solid 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    transition: 400ms ease-in-out;
  }
  .tag:hover{
    background-color: rgb(3, 45, 56);
  }
  .tag:hover a{
    color: white;
    }
  .tags__container{
    margin-top: 40px;
    margin-bottom: 40px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    place-items: center;
    row-gap: 60px;
  }
</style>
