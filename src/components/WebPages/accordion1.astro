<script>
  document.addEventListener('DOMContentLoaded', () => {
      const triggers: NodeListOf<HTMLElement> = document.querySelectorAll('.toggle-trigger');

      triggers.forEach((trigger) => {
          trigger.addEventListener('click', function () {
              const content = this.nextElementSibling as HTMLElement;
              const img = this.querySelector('img') as HTMLImageElement;

              if (content.classList.contains('visible')) {
                  content.classList.remove('visible', 'max-h-screen', 'opacity-100');
                  content.classList.add('invisible', 'max-h-0', 'opacity-0');
                  img.classList.remove('-rotate-180');
              } else {
                  content.classList.remove('invisible', 'max-h-0', 'opacity-0');
                  content.classList.add('visible', 'max-h-screen', 'opacity-100');
                  img.classList.add('-rotate-180');
              }
          });
      });
  });
</script>

<style>
  .visible {
      max-height: none;
      opacity: 1 !important;
  }
</style>
